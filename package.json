{
  "name": "com.foundrylabs.devbook",
  "author": "FoundryLabs, Inc.",
  "version": "0.0.1",
  "private": true,
  "homepage": ".",
  "description": "",
  "main": "build/electron/main.js",
  "build": {
    "publish": {
      "provider": "generic",
      "url": "https://storage.googleapis.com/devbook-publish/"
    },
    "appId": "devbook.foundrylabs.com",
    "productName": "Devbook",
    "afterSign": "scripts/notarize.js",
    "mac": {
      "icon": "./build/icon.png",
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.inherit.plist"
    },
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "extraResources": [
      "resources"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": "12"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build && tsc -p electron",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"BROWSER=none npm run start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron --enable-logging .\"",
    "electron:build-dev": "npm run build && NOTARIZATION=none electron-builder build --mac --publish always",
    "electron:build": "npm run build && electron-builder build --mac --publish always",
    "release": "rm -rf dist && npm run electron:build && echo Devbook-*.dmg Devbook-*.zip latest-mac.yml | xargs -n 1 -I{} gsutil -h \"Cache-Control:no-cache, max-age=0\" cp dist/{} gs://devbook-publish"
  },
  "dependencies": {
    "analytics-node": "^3.4.0-beta.3",
    "axios": "^0.21.0",
    "electron-store": "^5.2.0",
    "express": "^4.17.1",
    "prism-react-renderer": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hotkeys-hook": "^2.4.0",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.1.1",
    "electron-updater": "^4.3.5",
    "tmp": "^0.2.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/analytics-node": "^3.1.4",
    "@types/express": "^4.17.9",
    "@types/node": "^12.12.6",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.6",
    "@types/styled-components": "^5.1.0",
    "@types/tmp": "^0.2.0",
    "@types/uuid": "^8.3.0",
    "@types/webpack-env": "^1.15.2",
    "concurrently": "^5.2.0",
    "craco": "0.0.3",
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "electron-reload": "^1.5.0",
    "react-scripts": "^3.4.1",
    "typescript": "^4.0.2",
    "wait-on": "^5.0.0"
  }
}
