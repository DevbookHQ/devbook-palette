{
  "name": "context-search-palette",
  "version": "0.0.1",
  "private": true,
  "homepage": ".",
  "description": "",
  "main": "build/electron/main.js",
  "build": {
    "appId": "context.foundrylabs.com",
    "productName": "Context search",
    "mac": {
      "icon": "./build/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./build/icon.ico"
    },
    "linux": {
      "artifactName": "${productName}",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./build/icon.png"
    },
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "extraResources": [
      "resources"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": "12"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "eject": "craco eject",
    "postinstall": "electron-builder install-app-deps",
    "electron:debug": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron --inspect --js-flags=\"--expose_gc\" --enable-logging --enable-stack-dumping --trace-warnings .\"",
    "electron:dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron --enable-logging .\"",
    "electron:build-mac": "npm build && tsc -p electron && npx electron-builder build --mac"
  },
  "dependencies": {
    "electron-store": "^5.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.t2.0",
    "socket.io": "2.3.0",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^12.12.6",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.6",
    "@types/socket.io": "^2.1.11",
    "@types/styled-components": "^5.1.0",
    "@types/webpack-env": "^1.15.2",
    "concurrently": "^5.2.0",
    "craco": "0.0.3",
    "electron": "^10.1.3",
    "electron-builder": "^22.7.0",
    "electron-reload": "^1.5.0",
    "react-scripts": "^3.4.1",
    "typescript": "^4.0.2",
    "wait-on": "^5.0.0"
  }
}
