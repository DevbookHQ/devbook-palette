{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "../../build/electron",
    "rootDir": "../",
    "noEmitOnError": true, 
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDirs": [
      ".",
    ],
    "paths": {
      "@renderer/*": [
        "../*"
      ],
      "@main/*": [
        "./*"
      ],
    },
  },
  "include": [
    ".",
  ]
}